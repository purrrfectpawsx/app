{
  "name": "pet-care-app",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "test:smoke": "playwright test --grep @smoke",
    "test:smoke:ui": "playwright test --grep @smoke --ui",
    "test:smoke:headed": "playwright test --grep @smoke --headed",
    "test:mocked": "playwright test --grep-invert @smoke",
    "test:story": "playwright test --grep",
    "db:migrate": "echo \"Apply migrations manually via Supabase SQL Editor\" && echo \"See supabase/SETUP.md for instructions\"",
    "db:migrate:new": "echo \"Create new migration: supabase/migrations/00X_<description>.sql\"",
    "db:reset": "echo \"Reset database: Use Supabase Dashboard -> Database -> Reset Database\"",
    "db:status": "echo \"Check migration status via Supabase Dashboard -> Database -> Migrations\""
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/supabase-js": "^2.38.0",
    "browser-image-compression": "^2.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.0",
    "react-router-dom": "^6.20.0",
    "tailwind-merge": "^2.1.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^4.0.8"
  }
}
